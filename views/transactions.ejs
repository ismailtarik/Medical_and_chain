<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blockchain Transactions</title>
    <!-- Lien vers le CSS personnalisÃ© -->
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <script src='/javascripts/main.js'></script>

    <style>
      body {
        background-color: #f8f9fa;
      }
      .container {
        max-width: 1200px;
      }
      .btn-custom {
        padding-inline: 18px;
        margin-bottom: 10px;
        text-transform: uppercase;
      }
      .navigation-buttons {
        margin-left: 20px;
      }
      h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #343a40;
        margin-bottom: 30px;
      }
      .table {
        background-color: #ffffff;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
      }
      .table th, .table td {
        text-align: center;
        vertical-align: middle;
      }
    </style>
  </head>
  <body>
    <br><br>
        <h1 class="f1" style="margin-top: -1em">Medic@Chain</h1>
        <button style="padding-inline: 18px;" onclick="admin_portal(event)" class="btn btn-danger"> A D M I N </button><br><br>
        <button style="padding-inline: 18px;" onclick="doctor_portal(event)" class="btn btn-danger"> D O C T O R </button><br><br>
        <button style="padding-inline: 18px;" onclick="patient_portal(event)" class="btn btn-danger"> P A T I E N T S </button><br><br>
        <button style="padding-inline: 18px;" onclick="transactions_portal(event)" class="btn btn-primary"> T R A N S A C T I O N S </button><br><br>
        <div class="container mt-4">
          <!-- Title -->
          <h1 class="text-center">Blockchain Transactions</h1>

          <!-- Table -->
          <div class="table-responsive">
            <table class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Transaction Hash</th>
                  <th>From</th>
                  <th>To</th>
                  <th>Value</th>
                </tr>
              </thead>
              <tbody>
                <% transactions.forEach(transaction => { %>
                  <tr>
                    <td><%= transaction.transactionHash %></td>
                    <td><%= transaction.from %></td>
                    <td><%= transaction.to %></td>
                    <td><%= transaction.value %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
  </body>
</html>
